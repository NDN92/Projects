package de.NDN.app.writeInvoice;

import javafx.scene.web.WebEngine;
import javafx.scene.web.WebView;

public class WriteInvoiceView {
	
	private WebView browser;
	private WebEngine engine;
	
	public WriteInvoiceView(WebView browser, WebEngine engine) {
		this.browser = browser;
		this.engine = engine;
	}
	
	public void changeViewPageZoom(int viewPageZoom) {
		this.engine.executeScript(
				"window.onload = function () {" +
						"document.getElementById('viewPage').style.zoom = '" + viewPageZoom + "%';" +
				"}"
		);
	}
	
}
